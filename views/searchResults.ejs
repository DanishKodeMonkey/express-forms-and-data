<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0"
        />
        <title><%= title %></title>
    </head>
    <body>
        <h1><%= title %></h1>
        <% if (users && users.length > 0) { %>
        <ul>
            <% users.forEach(user => { %>
            <li>
                Name: <%= user.firstName %> <%= user.lastName %> - Email: <%=
                user.email %> - Age: <%= user.age ? user.age : '' %> - Bio: <%=
                user.bio ? user.bio : '' %>
            </li>
            <% }) %>
        </ul>
        <% } else { %>
        <p><%= message %></p>

        <% } %>
        <a href="/">Back to home</a>
    </body>
</html>
